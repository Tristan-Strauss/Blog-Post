<%- include("partials/header"); -%>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="entryTitle">Title</label>
        <input class="form-control" type="text" id="entryTitle" name="newEntryTitle" autocomplete="off" autofocus required>
        <label for="entryBody">Post Body</label>
        <textarea class="form-control" name="newEntryBody" id="entryBody" cols="30" rows="10"></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Publish</button>
</form>

<%- include("partials/footer"); -%>